{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2017",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "rootDir": "src",
        "outDir": "temp",
        "sourceMap": true,
        "strictNullChecks": true,
        "lib": [
            "es2017"
        ],
