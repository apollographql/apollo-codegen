{
  "name": "apollo-cli",
  "description": "CLI for the Apollo platform of tooling",
  "version": "0.0.0",
  "author": "opensource@apollographql.com",
  "bin": {
    "apollo": "./bin/run"
  },
  "bugs": "https://github.com/apollographql/apollo-cli/issues",
  "dependencies": {
    "@oclif/command": "^1.4.21",
    "@oclif/config": "^1.6.17",
    "@oclif/plugin-help": "^1.2.10",
    "apollo-link": "^1.2.2",
    "apollo-link-http": "^1.5.4",
    "cli-ux": "^4.3.0",
    "env-ci": "^2.1.0",
    "git-parse": "^1.0.3",
    "git-rev-sync": "^1.12.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "heroku-cli-util": "^8.0.9",
    "listr": "^0.14.1",
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "@fancy-test/nock": "^0.1.1",
    "@oclif/dev-cli": "^1.4.2",
    "@oclif/test": "^1.0.6",
    "@types/chai": "^4.1.2",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^22.2.3",
    "@types/mocha": "^5.0.0",
    "@types/nock": "^9.1.3",
    "@types/node": "^9.6.11",
    "chai": "^4.1.2",
    "globby": "^8.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "nock": "^9.2.6",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tslib": "^1.9.0",
    "typescript": "^2.8.3"
  },
  "precommit": "pretty-quick --staged",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/apollographql/apollo-cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "apollo",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "repository": "apollographql/apollo-cli",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tsc -p . --noEmit",
    "prepack": "rm -rf lib && tsc && oclif-dev manifest && oclif-dev readme",
    "test": "jest",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
