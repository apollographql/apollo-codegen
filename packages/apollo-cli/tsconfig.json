{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "lib": ["dom", "es6", "esnext.asynciterable"],
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./@types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./**/__tests__/**/*"
  ]
}
