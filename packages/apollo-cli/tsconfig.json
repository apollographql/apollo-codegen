{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": ["./src"],
    "lib": ["dom", "es7", "esnext.asynciterable"],
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "*": ["./@types/*"]
    },
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": ["./src/**/*"],
  "exclude": [ "**/__tests__/*" ]
}
