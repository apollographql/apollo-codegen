{
  "name": "apollo-vscode",
  "description": "A VS Code extension for Apollo GraphQL projects",
  "author": "Apollo GraphQL",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/apollographql/vscode-graphql"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "publisher": "apollographql",
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:**/apollo.config.js",
    "workspaceContains:**/package.json"
  ],
  "main": "./lib/extension",
  "contributes": {
    "configuration": {},
    "languages": [
      {
        "id": "graphql",
        "extensions": [
          ".graphql",
          ".gql"
        ],
        "aliases": [
          "GraphQL"
        ],
        "configuration": "./graphql.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.js.jsx",
          "source.tsx"
        ],
        "scopeName": "inline.graphql",
        "path": "./syntaxes/graphql.js.json",
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      }
    ]
  },
  "scripts": {
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "build": "tsc -p .",
    "watch": "tsc -w -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "packageExtension": "rm -rf node_modules && npm install && npm run update-vscode && npm run build && vsce package"
  },
  "dependencies": {
    "vscode": "^1.1.17",
    "vscode-languageclient": "next"
  }
}
