{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "lib": ["dom", "es2019"],
    "paths": {
      "*": ["./@types/*", "../../types/*"]
    },
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    { "path": "../apollo-codegen-flow" },
    { "path": "../apollo-codegen-scala" },
    { "path": "../apollo-codegen-swift" },
    { "path": "../apollo-codegen-typescript" },
    { "path": "../apollo-env" },
    { "path": "../apollo-graphql" },
    { "path": "../apollo-language-server" },
    { "path": "../apollo-tools" }
  ]
}
