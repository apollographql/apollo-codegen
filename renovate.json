{
  "extends": ["apollo-open-source"],
  "packageRules": [
    {
      "paths": ["packages/apollo/package.json"],
      "extends": [":pinAllExceptPeerDependencies"],
      "packageRules": [
        {
          "packageNames": ["graphql"],
          "rangeStrategy": "widen",
          "allowedVersions": "^14.0.0"
        }
      ]
    },
    {
      "packageNames": ["@types/node"],
      "allowedVersions": "8.x"
    },
    {
      "packageNames": ["lerna"],
      "allowedVersions": "=3.13.4"
    }
  ]
}
